<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">


    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Fecha de caducidad"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_days"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="0 días" />

    <com.xw.repo.BubbleSeekBar
        android:id="@+id/seek_bar_days"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:bsb_show_progress_in_float="false"
        app:bsb_max="10"
        app:bsb_min="0"
        app:bsb_progress="0"
        app:bsb_second_track_color="@color/colorBwigoPrimary"
        app:bsb_track_color="@color/colorBwigoPrimaryLight"
        app:bsb_track_size="4dp" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Ubicación" />

    <TextView
        android:id="@+id/tv_kms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0 kms" />

    <com.xw.repo.BubbleSeekBar
        android:id="@+id/seek_bar_kms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:bsb_show_progress_in_float="false"
        app:bsb_max="10"
        app:bsb_min="0"
        app:bsb_progress="0"
        app:bsb_second_track_color="@color/colorBwigoPrimary"
        app:bsb_track_color="@color/colorBwigoPrimaryLight"
        app:bsb_track_size="4dp" />


</LinearLayout>