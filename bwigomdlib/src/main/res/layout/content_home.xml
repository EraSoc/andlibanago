<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".HomeActivity"
    tools:showIn="@layout/app_bar_home">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Resto de la interfaz de usuario -->
    <LinearLayout

        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="130dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginRight="4dp"
                            android:orientation="vertical">

                            <com.google.android.material.floatingactionbutton.FloatingActionButton
                                android:id="@+id/fab_alimentos"
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:layout_gravity="center"
                                android:layout_margin="4dp"
                                android:layout_weight="1"
                                android:clickable="true"
                                app:backgroundTint="@android:color/white"
                                app:fabCustomSize="56dp"
                                app:srcCompat="@drawable/ic_alimentos" />

                            <TextView
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:layout_weight="1"
                                android:lines="2"
                                android:maxLines="2"
                                android:text="Alimentos y Bebidas"
                                android:textAlignment="center"
                                android:textColor="@color/colorBlack"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginRight="4dp"
                            android:orientation="vertical">

                            <com.google.android.material.floatingactionbutton.FloatingActionButton
                                android:id="@+id/fab_salud"
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:layout_gravity="center"
                                android:layout_margin="4dp"
                                android:layout_weight="1"
                                android:clickable="true"
                                android:scaleType="center"
                                app:backgroundTint="@android:color/white"
                                app:fabSize="normal"
                                app:srcCompat="@drawable/ic_salud" />

                            <TextView
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:layout_weight="1"
                                android:lines="1"
                                android:maxLines="2"
                                android:text="Salud y Belleza"
                                android:textAlignment="center"
                                android:textColor="@color/colorBlack"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginRight="4dp"
                            android:orientation="vertical">

                            <com.google.android.material.floatingactionbutton.FloatingActionButton
                                android:id="@+id/fab_casa"
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:layout_gravity="center"
                                android:layout_margin="4dp"
                                android:layout_weight="1"
                                android:clickable="true"
                                app:backgroundTint="@android:color/white"
                                app:fabCustomSize="56dp"
                                app:srcCompat="@drawable/ic_hogar" />

                            <TextView
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:layout_weight="1"
                                android:lines="1"
                                android:maxLines="2"
                                android:text="Casa y Hogar"
                                android:textAlignment="center"
                                android:textColor="@color/colorBlack"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginRight="4dp"
                            android:orientation="vertical">

                            <com.google.android.material.floatingactionbutton.FloatingActionButton
                                android:id="@+id/fab_entretenimiento"
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:layout_gravity="center"
                                android:layout_margin="4dp"
                                android:layout_weight="1"
                                android:clickable="true"
                                app:backgroundTint="@android:color/white"
                                app:fabCustomSize="56dp"
                                app:srcCompat="@drawable/ic_entretenimiento" />

                            <TextView
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:layout_weight="1"
                                android:lines="1"
                                android:maxLines="2"
                                android:text="Entretenimiento"
                                android:textAlignment="center"
                                android:textColor="@color/colorBlack"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginRight="4dp"
                            android:orientation="vertical">

                            <com.google.android.material.floatingactionbutton.FloatingActionButton
                                android:id="@+id/fab_especialidad"
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:layout_gravity="center"
                                android:layout_margin="4dp"
                                android:layout_weight="1"
                                android:clickable="true"
                                app:backgroundTint="@android:color/white"
                                app:fabCustomSize="56dp"
                                app:srcCompat="@drawable/ic_especialidad" />

                            <TextView
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:layout_weight="1"
                                android:lines="1"
                                android:maxLines="2"
                                android:text="Especialidad"
                                android:textAlignment="center"
                                android:textColor="@color/colorBlack"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginRight="4dp"
                            android:orientation="vertical">

                            <com.google.android.material.floatingactionbutton.FloatingActionButton
                                android:id="@+id/fab_ropa"
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:layout_gravity="center"
                                android:layout_margin="4dp"
                                android:layout_weight="1"
                                android:clickable="true"
                                app:backgroundTint="@android:color/white"
                                app:fabCustomSize="56dp"
                                app:srcCompat="@drawable/ic_ropa" />

                            <TextView
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:layout_weight="1"
                                android:lines="2"
                                android:maxLines="2"
                                android:text="Ropa y Accesprios"
                                android:textAlignment="center"
                                android:textColor="@color/colorBlack"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginRight="4dp"
                            android:orientation="vertical">

                            <com.google.android.material.floatingactionbutton.FloatingActionButton
                                android:id="@+id/fab_viajes"
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:layout_gravity="center"
                                android:layout_margin="4dp"
                                android:layout_weight="1"
                                android:clickable="true"
                                app:backgroundTint="@android:color/white"
                                app:fabCustomSize="56dp"
                                app:srcCompat="@drawable/ic_viajes" />

                            <TextView
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:layout_weight="1"
                                android:lines="1"
                                android:maxLines="2"
                                android:text="Viajes"
                                android:textAlignment="center"
                                android:textColor="@color/colorBlack"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginRight="4dp"
                            android:orientation="vertical">

                            <com.google.android.material.floatingactionbutton.FloatingActionButton
                                android:id="@+id/fab_educacion"
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:layout_gravity="center"
                                android:layout_margin="4dp"
                                android:layout_weight="1"
                                android:clickable="true"
                                app:backgroundTint="@android:color/white"
                                app:fabCustomSize="56dp"
                                app:srcCompat="@drawable/ic_educacion" />

                            <TextView
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:layout_weight="1"
                                android:lines="1"
                                android:maxLines="2"
                                android:text="EducaciÃ³n"
                                android:textAlignment="center"
                                android:textColor="@color/colorBlack"
                                android:textSize="12sp" />

                        </LinearLayout>


                    </LinearLayout>
                </HorizontalScrollView>

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="RECOMENDADOS"
                    android:textColor="@color/colorBlack" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_destacados"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="ALIANZAS"
                    android:textColor="@color/colorBlack" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_recomendados"
                    android:layout_width="match_parent"
                    android:layout_height="550dp" />

            </LinearLayout>

        </ScrollView>
    </LinearLayout>


</LinearLayout>